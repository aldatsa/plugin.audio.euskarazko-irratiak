<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.euskarazko-irratiak" name="Euskarazko irratiak zuzenean" version="0.2.1" provider-name="Asier Iturralde (iametza.eus)">
    <requires>
        <import addon="xbmc.python" version="2.20.0" />
        <import addon="script.module.requests" version="2.9.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Listen to Basque language radio stations</summary>
        <summary lang="eu">Euskarazko irratiak zuzenean</summary>
        <license>GNU General Public License, v3</license>
        <description lang="en">Listen to over 30 radio stations that broadcast in Basque language.</description>
        <description lang="eu">Plugin honi esker programazio osoa, edo gutxienez zati bat, euskaraz emititzen duten 30 irratitik gora zuzenean entzun ditzakezu.</description>
        <platform>all</platform>
    </extension>
</addon>
